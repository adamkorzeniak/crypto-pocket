<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/balance_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="4dp"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/coin_name_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:paddingVertical="8dp"
            android:paddingHorizontal="4dp"/>

        <TextView
            android:id="@+id/coin_symbol_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:paddingVertical="8dp"
            android:paddingHorizontal="4dp"/>

        <TextView
            android:id="@+id/coin_price_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="17.5"
            android:paddingVertical="8dp"
            android:paddingHorizontal="4dp"
            android:gravity="end"/>

        <TextView
            android:id="@+id/coin_balance_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="17.5"
            android:paddingVertical="8dp"
            android:paddingHorizontal="4dp"
            android:gravity="end"/>

        <TextView
            android:id="@+id/coin_value_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:paddingVertical="8dp"
            android:paddingHorizontal="4dp"
            android:gravity="end"/>

    </LinearLayout>

</android.support.v7.widget.CardView>